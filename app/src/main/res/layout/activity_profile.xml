<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/progress_style_register"
        android:visibility="gone"
        android:layout_weight="10">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView.Large"
            android:visibility="visible"
            app:indicatorName="LineScaleIndicator"
            app:indicatorColor="@color/colorPrimaryDark"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/register_form"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/button">
<TextView
    android:layout_width="match_parent"
    android:text="Profile"
    android:textAlignment="center"
    android:textColor="#fff"
    android:textSize="25sp"
    android:drawableLeft="@drawable/akun"
    android:drawableRight="@drawable/akun"
    android:layout_height="wrap_content">

</TextView>
            </LinearLayout>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Name"
             android:textColor="#000">
         </TextView>
            <EditText
                android:hint="Name"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_marginBottom="20dp"

                android:id="@+id/input_name"
                android:drawableLeft="@drawable/akunbiru"
                android:layout_above="@+id/input_phone_number"
                android:background="@drawable/rounded_border"
                android:layout_height="50dp">

            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#000">
            </TextView>
            <EditText
                android:hint="Phone Number"
                android:layout_width="match_parent"
                android:inputType="number"
                android:drawableLeft="@drawable/phone"
                android:id="@+id/input_phone_number"
                android:layout_above="@+id/input_password"
                android:background="@drawable/rounded_border"
                android:layout_height="50dp">

            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Address"
                android:textColor="#000">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/rounded_border"
                android:layout_height="50dp"
                android:hint="Address "
                android:textColor="#4D4D4D"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/address"
                android:layout_below="@id/input_password"
                android:id="@+id/address"

                >

            </EditText>
            <Button
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Save Change"
                android:background="@drawable/roundedbutton"
                android:id="@+id/btn_create_account"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true">


            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>