<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".notification">
<RelativeLayout
    android:id="@+id/display_no_notification"
    android:layout_width="match_parent"
    android:background="#EEECEC"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/icon_notif"
        android:src="@drawable/notification_icon_blank"
        android:layout_centerInParent="true">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/icon_notif"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="No Notification\n Check again for updates soon ;)">

    </TextView>
</RelativeLayout>
</LinearLayout>