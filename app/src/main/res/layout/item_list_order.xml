<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            android:id="@+id/item_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Order Number: "
                        android:id="@+id/title_order_number"
                        android:drawableLeft="@drawable/order_number_icon">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#19"
                        android:id="@+id/order_number"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/title_order_number"
                        >

                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Price Total: "
                        android:id="@+id/title_order_numb"
                        android:drawableLeft="@drawable/money_orange">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.25.000"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:id="@+id/price_total"
                        android:layout_toRightOf="@+id/title_order_numb"
                        >
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Payment Method: "
                        android:id="@+id/title_order_num"
                        android:drawableLeft="@drawable/method">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CASH"
                        android:id="@+id/method"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/title_order_num"
                        >
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Order Date: "
                        android:id="@+id/title_order_nu"
                        android:drawableLeft="@drawable/calendar">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23 Apr 2020"
                        android:textSize="15sp"
                        android:id="@+id/order_date"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/title_order_nu"
                        >
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:drawableLeft="@drawable/active_dot"
                        android:textColor="#000"
                        android:drawableRight="@drawable/active_dot"
                        android:text=" Order Has Been Placed "
                        android:id="@+id/status_order"
                        >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>